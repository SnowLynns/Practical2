                android:layout_width="wrap_content"
                android:layout_height="180dp"
                app:srcCompat="@drawable/barnowllocation" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/barnowlFacts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="     Barn Owl Facts:           \n
    Main Prey:\n
    Fun Fact:\n\n\n
    Distinctive Feature:\n\n
    Wingspan:\n
    Habitat:\n
    Diet:\n
